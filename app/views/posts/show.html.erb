<div class="main posts-show">
  <div class="container">
    <div class="posts-show-item">
      <p>
        <%= @post.content %>      
      </p>
      <div class="post-time">
        <%= @post.created_at %>
        <p><%=link_to(@user.name, "/users/#{@user.id}")%></P>
      </div>

      <div class="past-menus">
       <%id @posts.user.id == @current_user%>
      
        <%=link_to("編集", "/posts/#{@post.id}/edit") %>
        </div>
        <%= button_to("削除", "/posts/#{@post.id}/destroy", {method: "post"}) %>
       <%end%>
      
    </div>
  </div>
</div>